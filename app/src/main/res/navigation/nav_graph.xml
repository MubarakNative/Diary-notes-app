<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeNoteFragment">

    <fragment
        android:id="@+id/homeNoteFragment"
        android:name="com.mubarak.madexample.presenter.note.HomeNoteFragment"
        android:label="fragment_home_note"
        tools:layout="@layout/fragment_home_note" >
        <action
            android:id="@+id/action_homeNoteFragment_to_actionNoteFragment"
            app:destination="@id/actionNoteFragment" />

    </fragment>
    <fragment
        android:id="@+id/actionNoteFragment"
        android:name="com.mubarak.madexample.presenter.addoreditnote.ActionNoteFragment"
        android:label="fragment_action_note"
        tools:layout="@layout/fragment_action_note" >


        <argument
            android:name="noteId"
            app:argType="integer"
            android:defaultValue="0" />

        <argument android:name="noteTitle"
            app:argType="string"
            app:nullable="true" />

        <argument android:name="noteDescription"
            app:argType="string"
            app:nullable="true" />

    </fragment>
    <fragment
        android:id="@+id/settingNoteFragment"
        android:name="com.mubarak.madexample.presenter.settings.SettingNoteFragment"
        android:label="fragment_setting_note"
        tools:layout="@layout/fragment_settings_note" />
</navigation>